<?xml version ="1.0"?>
<robot name ="my_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
<xacro:macro name="wheel" params="side xyz">
<link name="base_${side}_wheel_link">
  <inertial>
    <mass value="3"/>
    <inertia ixx="0.0014" iyy="0.0014" izz="0.0025" ixy="0" ixz="0" iyz="0"/>
  </inertial>
  <visual>
    <geometry>
      <cylinder length="0.0206" radius="0.0352"/>
    </geometry>
    <material name="black"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </visual>
  <collision>
    <geometry>
      <cylinder length="0.0206" radius="0.0352"/>
    </geometry>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </collision>
</link>
<joint name="${side}_wheel_joint" type="continuous">
  <parent link="chassis"/>
  <child link="base_${side}_wheel_link"/>
  <origin xyz="${xyz}" rpy="-1.57 0 0"/>  <!-- Updated to use ${xyz} -->
  <axis xyz="0 0 1"/>
  <dynamics friction="0.1"/>
</joint>
<gazebo reference="base_${side}_wheel_link">
 <material>Gazebo/Black</material>
    <kp>1000000000000000000000000000.0</kp>
    <kd>1000000000000000000000000000.0</kd>
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
</gazebo>

</xacro:macro>
</robot>